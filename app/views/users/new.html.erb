<header class="page-header">
<h1>Signup!</h1>
</header>


<%= form_for @user do |f| %>
  
  <% if f.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% f.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

  <div>First Name: <%= f.text_field :first_name, class: 'form-control' %></div>
  <div>Last Name: <%= f.text_field :last_name, class: 'form-control' %></div>
  <div>Email: <%= f.text_field :email, class: 'form-control' %></div>
  <div>Password: <%= f.password_field :password, class: 'form-control' %></div>
  <div>Password confirmation: <%= f.password_field :password_confirmation, class: 'form-control' %></div>
  
  

  
    
    <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>
